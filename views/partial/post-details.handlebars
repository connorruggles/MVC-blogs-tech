<section class=" flex flex-col flex-wrap justify-center py-5 gap-5">
  <a href="/dashboard/edit/{{id}}"></a>

  <div
    class="flex flex-col flex-wrap justify-center container mx-auto px-4 mx-5xl py-5 gap-5 bg-white max-w-xlg gap-x-20 border-2  rounded-md">
    <div
      class=" flex items-center relative p-3 col-start-1 row-start-1 flex-col-reverse rounded-lg  via-black/0 sm:bg-none sm:row-start-2 sm:p-0 lg:row-start-1">
      <a href="/post/{{id}}" class="mt-1 text-lg font-semibold sm:text-slate-900 md:text-2xl">{{title}}</a>
    </div>
    <div
      class=" flex relative p-3 col-start-1 row-start-1 flex-col-reverse rounded-lg  via-black/0 sm:bg-none sm:row-start-2 sm:p-0 lg:row-start-1">
      <p class="mt-1 text-sm font-semibold sm:text-slate-900 md:text-lg">{{post_text}}</p>
    </div>
    <div
      class=" flex items-center relative p-3 col-start-1 row-start-1 flex-col-reverse rounded-lg  via-black/0 sm:bg-none sm:row-start-2 sm:p-0 lg:row-start-1">
      <p class="mt-1 text-sm font-semibold sm:text-slate-900 md:text-lg">Posted by {{user.username}} on {{format_date
        created_at}} </p>
    </div>

  </div>
</section>